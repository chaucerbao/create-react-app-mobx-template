{
  "extends": ["tslint:recommended", "tslint-react"],
  "rules": {
    "jsx-no-multiline-js": false,
    "quotemark": {
      "options": ["single", "jsx-double", "avoid-escape"]
    },
    "semicolon": {
      "options": ["never"]
    },
    "trailing-comma": {
      "options": {
        "esSpecCompliant": true,
        "multiline": "always",
        "singleline": "never"
      }
    }
  }
}
