{
  "name": "styled-components-styles",
  "version": "0.1.0",
  "description": "Using styled-components to manage the styles",
  "author": "Alvin Chan <no@email.com>",
  "license": "ISC",
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-concentric-order",
      "stylelint-config-styled-components"
    ],
    "rules": {
      "comment-empty-line-before": null,
      "declaration-empty-line-before": null
    }
  },
  "devDependencies": {
    "source-map-explorer": "^1.5.0",
    "stylelint": "^9.4.0",
    "stylelint-config-concentric-order": "^3.3.2",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "tslint": "^5.11.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  },
  "dependencies": {
    "styled-components": "^3.3.3"
  },
  "scripts": {
    "start": "webpack-dev-server --config ../../webpack.config.js -d",
    "build": "webpack-cli --config ../../webpack.config.js -p --devtool source-map --progress",
    "analyze": "source-map-explorer public/js/script.js{,.map}"
  }
}
