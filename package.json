{
  "name": "create-react-app-template",
  "version": "0.1.0",
  "private": true,
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-concentric-order",
      "stylelint-config-prettier",
      "stylelint-config-styled-components"
    ],
    "syntax": "scss"
  },
  "lint-staged": {
    "{src,public}/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "tslint --fix",
      "stylelint",
      "git add"
    ],
    "{src,public}/**/*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "size-limit": [
    {
      "path": "src/index.tsx",
      "limit": "9 KB",
      "webpack": false
    }
  ],
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.47",
    "@types/react": "^16.0.18",
    "@types/react-dom": "^16.0.2",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "prettier": "^1.7.4",
    "size-limit": "^0.11.6",
    "stylelint": "^8.2.0",
    "stylelint-config-concentric-order": "^2.2.2",
    "stylelint-config-prettier": "^1.0.2",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.0.0",
    "tslint-config-prettier": "^1.6.0"
  },
  "dependencies": {
    "mobx": "^3.3.1",
    "mobx-react": "^4.3.3",
    "mobx-state-tree": "^1.0.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-scripts-ts": "2.8.0",
    "styled-components": "^2.2.2",
    "url-pattern": "^1.0.3"
  },
  "scripts": {
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build",
    "test": "react-scripts-ts test --env=jsdom",
    "precommit": "lint-staged"
  }
}
