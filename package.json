{
  "name": "create-react-app-mobx-template",
  "version": "0.1.0",
  "private": true,
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react"
    ],
    "env": {
      "browser": true,
      "jest": true
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-concentric-order"
    ],
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "syntax": "scss"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "prettier-eslint --write",
      "eslint",
      "stylelint",
      "git add"
    ]
  },
  "dependencies": {
    "mobx": "^3.1.9",
    "mobx-react": "^4.1.8",
    "normalize.css": "^7.0.0",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-router-dom": "^4.1.1",
    "styled-components": "^1.4.6"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.35.3",
    "babel-eslint": "^7.2.3",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.0.1",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.13.3",
    "lint-staged": "^3.4.1",
    "prettier-eslint-cli": "^3.4.4",
    "react-scripts": "0.9.5",
    "react-test-renderer": "^15.5.4",
    "stylelint": "^7.10.1",
    "stylelint-config-concentric-order": "^2.0.1",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-processor-styled-components": "^0.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "precommit": "lint-staged",
    "storybook": "NODE_PATH=src/ start-storybook -p 9009 -s public",
    "build-storybook": "NODE_PATH=src/ build-storybook -s public"
  }
}
