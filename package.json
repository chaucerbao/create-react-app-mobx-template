{
  "name": "react-project-templates",
  "version": "0.1.0",
  "description": "Patterns for using different libraries while developing a large React application",
  "author": "Alvin Chan <no@email.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chaucerbao/react-project-templates.git"
  },
  "license": "ISC",
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/react": "^16.4.7",
    "@types/react-dom": "^16.0.6",
    "husky": "^0.15.0-rc.13",
    "lerna": "^3.0.0-rc.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.14.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-react": "^3.6.0"
  },
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "tslib": "^1.9.3"
  }
}
