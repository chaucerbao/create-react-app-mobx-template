{
  "name": "react-project-template",
  "version": "0.0.1",
  "description": "A starter template for building a front-end web application with React",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run init && npm run build:dll && node_modules/.bin/webpack-dev-server -d --inline --hot",
    "build": "npm run init && NODE_ENV=production npm run build:dll -- -p && node_modules/.bin/webpack -p --optimize-occurence-order --optimize-dedupe && gzip -k9 public/assets/*",
    "build:dll": "node_modules/.bin/webpack --config=src/dll/webpack.config.js --optimize-occurence-order --optimize-dedupe",
    "clean": "rm -rf public/",
    "init": "npm run clean && mkdir -p public/ && cp src/index.html public/",
    "beautify": "node_modules/.bin/stylefmt --recursive src/ && node_modules/.bin/standard --fix src/",
    "test": "NODE_ENV=test node_modules/.bin/mocha-webpack --webpack-config webpack.config.js --recursive --glob '*.test.js' src/",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chaucerbao/react-project-template.git"
  },
  "author": "Alvin Chan <no@email.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chaucerbao/react-project-template/issues"
  },
  "homepage": "https://github.com/chaucerbao/react-project-template#readme",
  "babel": {
    "presets": ["es2015", "react"],
    "plugins": ["transform-flow-strip-types"]
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "devDependencies": {
    "autoprefixer": "*",
    "babel-core": "*",
    "babel-eslint": "*",
    "babel-loader": "*",
    "babel-plugin-transform-flow-strip-types": "*",
    "babel-preset-es2015": "*",
    "babel-preset-react": "*",
    "css-loader": "*",
    "enzyme": "*",
    "extract-text-webpack-plugin": "*",
    "flow-bin": "*",
    "mocha": "*",
    "mocha-webpack": "*",
    "postcss-import": "*",
    "postcss-loader": "*",
    "postcss-mixins": "*",
    "postcss-nested": "*",
    "postcss-simple-vars": "*",
    "react-addons-test-utils": "*",
    "standard": "*",
    "standard-loader": "*",
    "style-loader": "*",
    "stylefmt": "*",
    "stylelint": "*",
    "stylelint-config-standard": "*",
    "stylelint-webpack-plugin": "*",
    "webpack": "*",
    "webpack-dev-server": "*",
    "webpack-node-externals": "*"
  },
  "dependencies": {
    "normalize.css": "*",
    "react": "*",
    "react-dom": "*",
    "react-router": "*"
  }
}
