{
  "name": "create-react-app-template",
  "version": "0.1.0",
  "private": true,
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "{src,public}/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "{src,public}/**/*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^21.1.2",
    "@types/node": "^8.0.32",
    "@types/react": "^16.0.9",
    "@types/react-dom": "^16.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.3",
    "prettier": "^1.7.4",
    "tslint-config-prettier": "^1.5.0"
  },
  "dependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-scripts-ts": "2.7.0"
  },
  "scripts": {
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build",
    "test": "react-scripts-ts test --env=jsdom",
    "precommit": "lint-staged"
  }
}
